@page "/chat"
@using DemoBlazorWASM.Models;
<h3>Chat</h3>
<p><input type="text" @bind-value="newMessage" /></p>
<p><input type="text" @bind-value="author" /></p>
<button @onclick="SendMessage">Envoyer</button>
<button @onclick="JoinGroup">Rejoindre</button>
<button @onclick="SendToGroup">Envoyer au groupe</button>
<ul>
    @foreach(Message m in Messages)
    {
        <li>@m.Author : @m.Content</li>
    }
</ul>

